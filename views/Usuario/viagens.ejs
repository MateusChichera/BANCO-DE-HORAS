  <script>
// Função para obter o valor de um cookie pelo nome
function getCookie(name) {
    const cookies = document.cookie.split(';');
    for (let i = 0; i < cookies.length; i++) {
        const cookie = cookies[i].trim();
        // Verifica se o cookie começa com o nome desejado
        if (cookie.startsWith(name + '=')) {
            // Retorna o valor do cookie sem o nome
            return cookie.substring(name.length + 1);
        }
    }
    return ''; // Retorna uma string vazia se o cookie não for encontrado
}
    // Função para calcular o próximo domingo
function getNextSunday(date) {
    const dayOfWeek = date.getDay();
    const daysUntilSunday = (7 - dayOfWeek) % 7; // dias até o próximo domingo
    date.setDate(date.getDate() + daysUntilSunday); // adiciona os dias até o próximo domingo
    return date;
}

// Função para calcular o próximo domingo da semana seguinte
function getNextSundayNextWeek(date) {
    // Adiciona 7 dias ao próximo domingo para chegar no domingo da próxima semana
    date.setDate(date.getDate() + 7);
    return getNextSunday(date); // chama a função para encontrar o domingo
}

// Função para formatar a data no formato "YYYY-MM-DD"
function formatDate(date) {
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, '0'); // mês começa do 0, então somamos 1
    const day = String(date.getDate()).padStart(2, '0'); // garante que o dia tenha 2 dígitos
    return `${year}-${month}-${day}`;
}

// Definir a data de início e fim automaticamente
function setDateFields() {
    const today = new Date(); // data de hoje

    // Calcular os domingos
    const sundayThisWeek = getNextSunday(new Date(today)); // domingo desta semana
    const sundayNextWeek = getNextSundayNextWeek(new Date(sundayThisWeek)); // domingo da semana seguinte

    // Preencher os campos de data
    document.getElementById('dia').value = formatDate(sundayThisWeek); // data de início
    document.getElementById('dia2').value = formatDate(sundayNextWeek); // data de fim
}

// Chamar a função ao carregar a página
window.onload = setDateFields;

